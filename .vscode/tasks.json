{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Sokoban with PDCurses",
      "type": "shell",
      "command": "gcc",
      "args": [
        "SOKOBANGAME/main.c",
        "SOKOBANGAME/GAME_LOGIC/RoomFactory.c",
        "-Iinclude",
        "-Llib",
        "-lpdcurses",
        "-o",
        "SOKOBANGAME/sokoban.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
